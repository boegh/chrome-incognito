{
  "manifest_version": 2,
  "name": "Chrome Incognito Button",
  "version": "0.1",
  "description": "Adds an \"Open this page in a maximized, incognito window\"-button.",

  "permissions": ["tabs"],

  "icons": {
    "32": "32x32.png",
    "48": "48x48.png"
  },

  "browser_action": {
    "default_title": "Incognito"
  },

  "background": {
    "scripts": ["main.js"]
  }
}
